{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "apps/**/src/**/*",
    "apps/**/src/**/*.vue",
    "common/**/*",
    "common/**/*.vue",
    "components/**/*",
    "components/**/*.vue",
    "config/*.d.ts"
  ],
  "exclude": [
    "apps/**/src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "$": [
        "common"
      ],
      "$/*": [
        "common/"
      ],
      "~": [
        "components"
      ],
      "~/*": [
        "components/"
      ]
    }
  }
}
