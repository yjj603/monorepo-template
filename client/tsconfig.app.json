{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts",
    "apps/**/src/**/*",
    "apps/**/src/**/*.vue"
  ],
  "exclude": [
    "apps/**/src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/**/src/*"],
      "~/*": ["./components/*"],
      "$": ["./common/*"]
    }
  }
}
